{{ 'section-dog-food-features.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .dog-food-features {
    background-color: {{ section.settings.background_color }};
  }

  .dog-food-features__heading {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
  }

  .dog-food-features__button {
    background-color: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
  }

  .dog-food-features__button:hover {
    background-color: {{ section.settings.button_hover_color }};
  }

  .dog-food-features__guarantee {
    color: {{ section.settings.text_color }};
  }
{%- endstyle -%}

<div class="dog-food-features section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="dog-food-features__content">
      {%- if section.settings.heading != blank -%}
        <h2 class="dog-food-features__heading">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      <div class="dog-food-features__grid">
        <!-- Left Features -->
        <div class="dog-food-features__column">
          {%- for block in section.blocks -%}
            {%- if block.settings.position == 'left' -%}
              <div class="dog-food-features__item" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != blank -%}
                  <div class="dog-food-features__icon">
                    <img src="{{ block.settings.icon | image_url: width: 48 }}" 
                         alt="{{ block.settings.title }}" 
                         width="48" 
                         height="48">
                  </div>
                {%- endif -%}
                <div class="dog-food-features__text">
                  {%- if block.settings.title != blank -%}
                    <h3 class="dog-food-features__item-title">{{ block.settings.title }}</h3>
                  {%- endif -%}
                  {%- if block.settings.description != blank -%}
                    <p class="dog-food-features__item-description">{{ block.settings.description }}</p>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>

        <!-- Center Image -->
        <div class="dog-food-features__center">
          {%- if section.settings.center_image != blank -%}
            <div class="dog-food-features__center-image">
              <img src="{{ section.settings.center_image | image_url: width: 370 }}" 
                   alt="{{ section.settings.center_image.alt | escape }}"
                   width="370" 
                   height="370">
            </div>
          {%- endif -%}
        </div>

        <!-- Right Features -->
        <div class="dog-food-features__column">
          {%- for block in section.blocks -%}
            {%- if block.settings.position == 'right' -%}
              <div class="dog-food-features__item" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != blank -%}
                  <div class="dog-food-features__icon">
                    <img src="{{ block.settings.icon | image_url: width: 48 }}" 
                         alt="{{ block.settings.title }}" 
                         width="48" 
                         height="48">
                  </div>
                {%- endif -%}
                <div class="dog-food-features__text">
                  {%- if block.settings.title != blank -%}
                    <h3 class="dog-food-features__item-title">{{ block.settings.title }}</h3>
                  {%- endif -%}
                  {%- if block.settings.description != blank -%}
                    <p class="dog-food-features__item-description">{{ block.settings.description }}</p>
                  {%- endif -%}
                </div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

      {%- if section.settings.button_text != blank -%}
        <div class="dog-food-features__button-wrapper">
          <a href="{{ section.settings.button_link }}" class="dog-food-features__button button">
            {{ section.settings.button_text }}
          </a>
        </div>
      {%- endif -%}

      {%- if section.settings.show_guarantee or section.settings.show_payment_icons -%}
        <div class="dog-food-features__footer">
          {%- if section.settings.show_guarantee -%}
            <div class="dog-food-features__guarantee">
              {%- if section.settings.guarantee_icon != blank -%}
                <img src="{{ section.settings.guarantee_icon | image_url: width: 16 }}" 
                     alt="Guarantee" 
                     width="16" 
                     height="16">
              {%- endif -%}
              <span>{{ section.settings.guarantee_text }}</span>
            </div>
          {%- endif -%}
          
          {%- if section.settings.show_payment_icons -%}
            <div class="dog-food-features__payment-icons">
              {%- for i in (1..5) -%}
                {%- assign payment_icon = 'payment_icon_' | append: i -%}
                {%- if section.settings[payment_icon] != blank -%}
                  <img src="{{ section.settings[payment_icon] | image_url: width: 30 }}" 
                       alt="Payment method" 
                       width="30" 
                       height="20">
                {%- endif -%}
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

